# .env

# The full URL of the backend service you want to protect
TARGET_SERVICE_URL=http://mock-backend:5000

# Redis connection details
REDIS_HOST=redis
REDIS_PORT=6379

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=5 # Maximum requests allowed per minute
RATE_LIMIT_WINDOW_SECONDS=60 # Time window in seconds for the rate limit

# Admin API Key for managing gateway settings (whitelist/blacklist)
ADMIN_API_KEY=my_super_admin_key_for_pathhelm

# COLLECTION_INTERVAL_SECONDS=60 # history_collection interval in seconds
PATHHELM_STATUS_URL=http://pathhelm:8000/pathhelm/status # URL to check Pathhelm status